# Environment variables for Aditya Medical Backend
# Copy this file to .env and update values as needed

# MongoDB connection string (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/aditya_medical

# JWT secret and expiry
JWT_SECRET=replace_with_a_long_random_secret
JWT_EXPIRE=30d

# Server port
PORT=3000

# If serving frontend from a different origin, set it here
# FRONTEND_URL=http://localhost:3000
